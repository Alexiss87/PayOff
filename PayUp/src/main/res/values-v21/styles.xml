<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.base">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:colorAccent">@color/accentColor</item>
        <item name="android:background">@color/mainBackGround</item>
        <item name="android:colorActivatedHighlight">@color/primaryColor</item>
        <item name="android:colorControlActivated">@color/accentColor</item>
        <item name="android:colorControlHighlight">@color/primaryColor</item>
        <item name="android:colorPressedHighlight">@color/primaryColor</item>
        <item name="android:colorLongPressedHighlight">@color/primaryColor</item>


    </style>


    <style name="AboutText" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

</resources>